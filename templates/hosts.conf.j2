{% for site in sites %}
server {
  listen 443;
	server_name {{site.host}};

  ssl on;
  ssl_certificate {{site.fullchain_location | default(fullchain_location)}};
  ssl_certificate_key {{site.private_key_location | default(private_key_location)}};

	{% for setting in site.server_setting %}
	{{setting}}
	{% endfor %}

  location / {
    proxy_pass http://{{site.name}};
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
		proxy_set_header X-Forwarded-Port 443;
		proxy_read_timeout 90s;
		proxy_redirect http://{{site.name}} https://{{site.host}};

		{% for setting in site.location_setting %}
		{{setting}}
		{% endfor %}
  }
}
{% endfor %}